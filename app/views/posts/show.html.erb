<% provide(:page_id, "post-show-page") %>

<%= render 'shared/course_nav' %>

<section class="course-show">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="content">

        <div class="header">
          <div class="des-text">
            <h4><%= @post.syllabus.name %></h4>
            <p>本章预计学习时间: 3小时以内</p>
            <p>再学习6节就可以完成本章了</p>
          </div>
          <div class="view-count">
            共 248 位第二期同学学习了本节
          </div>
        </div>

        <div class="post">
          <div class="title markdown">
            <h1><%= @post.name %></h1>
            <i class="far fa-bookmark"></i>
          </div>
          <div class="text markdown">
            <%= markdown @post.description %>
          </div>
        </div>

        <div class="feel">
          <div class="title">
            <h3>对本页内容的感受如何？</h3>
          </div>
          <div class="select">
            <div class="item1">
              <div class="bor1">
                <span class="emoji">😁</span>
                <span class="word">So Easy</span>
              </div>
            </div>
            <div class="item2">
              <div class="bor2">
                <span class="emoji">😑</span>
                <span class="word">还 OK</span>
              </div>
            </div>
            <div class="item3">
              <div class="bor3">
                <span class="emoji">😭</span>
                <span class="word">奔溃了</span>
              </div>
            </div>
          </div>
        </div>

        <div class="paginate-box">
          <div class="line">
            <div class="item1">
              <div class="btn btn-white">
                <i class="fas fa-arrow-left"></i> 上一页
              </div>
            </div>
            <div class="item2">
              <div class="tip">
                <i class="far fa-lightbulb"></i> 可以使用 <i class="fas fa-arrow-circle-left"></i> <i class="fas fa-arrow-circle-right"></i> 进行翻页
              </div>
            </div>
            <div class="item3">
              <div class="btn btn-blue">
                下一页 <i class="fas fa-arrow-right"></i>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>