<div class="row">
  <div class="col-md-12">
    <%# if current_page?('/') %>
<!--      <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">-->
    <%# else %>
<!--      <div class="navbar navbar-default navbar-fixed-top scroll_navbar" role="navigation">-->
    <%# end %>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">
      <div class="container">
        <div class="navbar-header">
          <!--=== 右侧下拉选单（移动端时显示） ===-->
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-4" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!--===== 网站 Logo/名称 =====-->
          <%= link_to root_path, class: "navbar-brand logo-box scroll" do %>
            <i class="fa fa-ils" style="color: #31dae2"></i> 有学
          <% end %>
        </div>
        <div class="collapse navbar-collapse top-nav" id="menu-4">
          <!--=== 左边 ===-->
          <ul class="nav navbar-nav navbar-left">
          </ul>
          <!--=== 右边 ===-->
          <ul class='nav navbar-nav  navbar-right'>
            <li class="divider" role="separator"></li>
            <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <b class="caret"></b> <%= current_camp.name %>：
                </a>
                <ul class="dropdown-menu">
                  <% current_user.camps.each do |c| %>
                    <li><%= link_to c.name, camp_courses_path(c) %></li>
                    <li class="divider"></li>
                  <% end %>
                </ul>
              </li>
              <li><%= link_to "学习中心", camp_courses_path(current_camp) %></li>
              <li><%= link_to "Meetup", camp_meetup_groups_path(current_camp) %></li>
              <li><%= link_to "直播室", camp_live_broadcasts_path(current_camp) %></li>
              <li><%= link_to "比赛", camp_competitions_path(current_camp) %></li>
              <li><%= link_to "站内信", camp_conversations_path(current_camp) %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.email %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "个人主页", current_user %></li>
                  <li class="divider"></li>
                  <li><%= link_to "我的资料", "#" %></li>
                  <li><%= link_to "修改密码", edit_user_path(current_user) %></li>
                  <li><%= link_to "我的收藏", "#" %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "退出", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              course_intro/faq/competition/help
              sign_up/students
              <li><%= link_to "帮助文档", root_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "注册", signup_path %></li>
              <li><%= link_to "登录", login_path %></li>
            <% end %>
          </ul>
          <!--===== 搜索栏 =====-->
          <div class="input-group search-box">
            <input type="text" class="form-control" name="keyword" placeholder="搜索商品" value="">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <span><i class="fa fa-search"></i></span> <!-- 搜索栏图标 -->
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>