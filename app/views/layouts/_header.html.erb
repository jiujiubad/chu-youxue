<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "有学", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "学习中心", root_path %></li>
        <li><%= link_to "Meetup", root_path %></li>
        <li><%= link_to "直播室", root_path %></li>
        <li><%= link_to "编程比赛", root_path %></li>
        <li><%= link_to "帮助文档", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "个人主页", current_user %></li>
              <li class="divider"></li>
              <li><%= link_to "我的资料", "#" %></li>
              <li><%= link_to "修改密码", edit_user_path(current_user) %></li>
              <li><%= link_to "我的收藏", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "退出", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "注册", signup_path %></li>
          <li><%= link_to "登录", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>