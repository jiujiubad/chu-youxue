<session class="bg-white">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <li>
        <span>我的站内信</span>
        <span><%= link_to '返回', root_path %></span>
      </li>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>管理员</th>
            <th>标题</th>
            <th>时间</th>
          </tr>
        </thead>
        <tbody>
          <% @conversations.each do |c| %>
            <tr>
              <td>Admin</td>
              <td><%= link_to c.name, conversation_path(c) %></td>
              <td><%= c.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</session>

